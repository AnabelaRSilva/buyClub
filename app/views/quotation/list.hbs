<!-- Table with all quotation already created -->
<section class="section" id="quotes-section">
</section>

<script id="template" type="text/ractive">
    {{{{noop}}}}
    <div class="section-header">
        <h1>Quotes</h1>
        <div class="section-header-button">
            <a href="features-post-create.html" class="btn btn-primary">Add New</a>
        </div>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item"><a href="#">All Quotes</a></div>
        </div>
    </div>
    <div class="section-body">
        

        <div class="row">
            <div class="col-12">
                <div class="card mb-0">
                    <div class="card-body">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active" href="#">New <span class="badge badge-white">5</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Open <span class="badge badge-primary">1</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Close <span class="badge badge-primary">1</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    
                    <div class="card-body">
                        <div class="float-left">
                            <select class="form-control selectric">
                                <option>Action For Selected</option>
                                <option>Move to Draft</option>
                                <option>Move to Pending</option>
                                <option>Delete Pemanently</option>
                            </select>
                        </div>
                        <div class="float-right">
                            <form>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="clearfix mb-3"></div>
                    
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <tbody>
                                {{#each quotes}}
                                <tr>
                                    <td>
                                        {{name}}
                                        <div class="table-links">
                                        <a href="#">View</a>
                                        <div class="bullet"></div>
                                        <a href="#">Edit</a>
                                        <div class="bullet"></div>
                                        <a href="#" class="text-danger">Trash</a>
                                        </div>
                                    </td>
                                   <td>
                                        {{date}}
                                    </td>
                                    <td>
                                        {{state}}
                                    </td>


                                </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="float-right">
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                    {{#each pages}}
                                    <li class="page-item">
                                        <a class="page-link" href="#">{{this}}</a>
                                    </li>
                                    {{/each}}
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{{{/noop}}}}
</script>

<script>

    var ractive = new Ractive({
        template: '#template',
        target: '#quotes-section',
        data: {
            quotes: [],
            page: 1,
            count: 0,
            searchText: ''
        },
        computed: {
            pages() {
                var pages = [];
                pageMax = Math.ceil(this.get('count') / 10);
                for (var page = 1; page <= pageMax; page++)
                    pages.push(page);
                return pages;
            }
        }

    })

    ractive.on('search', (event) => {
        ractive.set('page', 1);
        loadQuotes(1, event.node.value);

    })
    ractive.observe('page', function (newValue, oldValue) {
        var search = ractive.get('search');
        loadQuotes(1, search);
    });


    async function loadQuotes(page, search) {

        let quotes = await $.getJSON('api/quotes', { page, search });
        ractive.set(quotes);

    }
    loadQuotes(1, '');

</script>